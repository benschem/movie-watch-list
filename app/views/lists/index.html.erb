<h1>Movie Lists</h1>
<%= link_to 'New List', new_list_path, class: "btn btn-gradient" %>
<ul>
  <% @lists.each do |list| %>
    <li class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')"
><h2><%= link_to list.name, list_path(list) %><h2></li>
  <% end %>
</ul>
